{
  "name": "minimal-ts-node",
  "version": "1.0.0",
  "description": "Minimal node + typescript starter",
  "main": "index.js",
  "scripts": {
    "watch": "tsc --skipLibCheck --watch",
    "dev": "nodemon --quiet",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "argentinux",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.6.0",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "loglevel": "^1.6.8"
  }
}